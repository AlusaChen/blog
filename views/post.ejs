<script type="text/plain" id="myEditor" style="width:1000px;height:240px;">
    <p>edit here</p>
</script>

<button class="btn" onclick="sendData()">submit</button>

<script type="text/javascript">
var um = UM.getEditor('myEditor');
function sendData() {
    $.post('/post', {title : $('[name=title]').val()?$('[name=title]').val():'test',post : UM.getEditor('myEditor').getContent()}, function(ret){
        if(!ret)
        {
            alert('post error');
            return;
        }

        if(ret.code == 1)
        {
            location.href = '/';
            return;
        }
        else {
            alert(ret.message);
        }
    });
}

</script>

