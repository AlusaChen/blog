script(type="text/javascript").
    var um = UM.getEditor('myEditor');
    function sendData() {
        var url = '/edit/#{post._id}';
        $.post(url, {title : $('[name=title]').val()?$('[name=title]').val():'test',post : UM.getEditor('myEditor').getContent()}, function(ret){
            if(!ret)
            {
                alert('Edit error');
                return;
            }

            if(ret.code == 1)
            {
              var gourl = '/p/#{post._id}';
                location.href = gourl;
                return;
            }
            else {
                alert(ret.message);
            }
        });
    }

